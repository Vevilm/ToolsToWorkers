@{
}
<form method="post" asp-action="ChooseWorker">
    <div class="mb-3">
        <label asp-for="WorkerID">Код работника:</label>
        <input asp-for="WorkerID" class="form-control" autocomplete="off">
        <span asp-validation-for="WorkerID" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ToolID">Код инструмента: @Model.ToolID</label>
        <input asp-for="ToolID" class="form-control" autocomplete="off" disabled>
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>




